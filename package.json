{
  "name": "facebook-repos",
  "version": "1.0.0",
  "private": true,
  "description": "An explorer app for Facebook projects in Github.",
  "author": "Leonardo Quixada <lquixada@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "predocker:build": "npm run -s build",
    "build": "npm run -s build:web && npm run -s build:bundle",
    "build:analyze": "./tasks/analyze",
    "build:bundle": "NODE_ENV=production webpack-cli -p",
    "build:web": "babel -D -q src -d web",
    "dev": "nodemon src/app",
    "docker:build": "docker build -t lquixada/facebook-repos .",
    "docker:pull": "docker pull lquixada/facebook-repos",
    "docker:push": "docker push lquixada/facebook-repos",
    "docker:start": "docker run -t -i -p 3000:3000 lquixada/facebook-repos",
    "start": "pm2 start .process.yml --no-daemon",
    "test": "npm run -s test:jest && npm run -s test:lint",
    "test:jest": "jest",
    "test:lint": "eslint --ignore-path .gitignore ."
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "body-parser": "1.18.3",
    "compression": "1.7.2",
    "cross-fetch": "2.2.0",
    "express": "4.16.3",
    "helmet": "3.12.1",
    "history": "4.7.2",
    "lodash.merge": "4.6.1",
    "morgan": "1.9.0",
    "pm2": "2.10.4",
    "react": "16.3.2",
    "react-component-octicons": "1.6.0",
    "react-dom": "16.3.2",
    "react-helmet": "5.2.0",
    "react-hot-loader": "4.2.0",
    "react-redux": "5.0.7",
    "react-router": "4.2.0",
    "react-router-config": "1.0.0-beta.4",
    "react-router-dom": "4.2.2",
    "redux": "4.0.0",
    "redux-saga": "1.0.0-beta.1",
    "styled-components": "3.2.6",
    "winston": "2.4.2"
  },
  "devDependencies": {
    "assets-webpack-plugin": "3.5.1",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.4",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "clean-webpack-plugin": "0.1.19",
    "copy-webpack-plugin": "4.5.1",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.4",
    "eslint": "4.19.1",
    "eslint-config-google": "0.9.1",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-react": "7.8.2",
    "flux-standard-action": "2.0.3",
    "husky": "0.14.3",
    "jest": "22.4.4",
    "lint-staged": "7.1.1",
    "nock": "9.2.6",
    "nodemon": "1.17.4",
    "react-test-renderer": "16.3.2",
    "supertest": "3.1.0",
    "webpack": "4.8.3",
    "webpack-bundle-analyzer": "2.12.0",
    "webpack-cli": "2.1.3",
    "webpack-dev-middleware": "3.1.3",
    "webpack-hot-middleware": "2.22.2"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/lquixada/xapo-challenge/"
  },
  "engines": {
    "node": "8.11.1"
  }
}
